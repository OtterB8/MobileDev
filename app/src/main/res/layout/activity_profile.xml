<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity"
    android:focusable="true" android:focusableInTouchMode="true">

    <include layout="@layout/toolbar_profile"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/mei_nagano"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_change_avatar"
                android:textAllCaps="false"
                android:elevation="10dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:text="Change avatar"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_horizontal"
                android:textSize="14dp"
                android:background="@drawable/btn_change_avatar_round"
                android:layout_marginVertical="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First name"
                        android:textSize="13dp"
                        android:layout_marginLeft="4dp"/>

                    <EditText
                        android:id="@+id/edt_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nagano"
                        android:textColor="#504F4F"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last name"
                        android:textSize="13dp"
                        android:layout_marginLeft="4dp"/>

                    <EditText
                        android:id="@+id/edt_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mei"
                        android:textColor="#504F4F"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Birthday"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/edt_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="01/01/1999"
                        android:textColor="#504F4F" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Create at"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/edt_createAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01/01/1999"
                        android:textColor="#504F4F"
                        android:textSize="19dp"
                        android:padding="4dp"
                        android:layout_marginTop="3dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="13dp"
                    android:layout_marginLeft="4dp"/>

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="meinagano99@gmail.com"
                    android:textColor="#504F4F"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="13dp"
                    android:layout_marginLeft="4dp"/>

                <EditText
                    android:id="@+id/edt_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0123456789101"
                    android:textColor="#504F4F"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#4CAF50" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_back"
                    android:textAllCaps="false"
                    android:elevation="10dp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Back"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14dp"
                    android:background="@drawable/btn_cancel_round"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    />
                <Button
                    android:id="@+id/btn_update_profile"
                    android:textAllCaps="false"
                    android:elevation="10dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Update profile"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14dp"
                    android:background="@drawable/btn_change_avatar_round"
                    android:textAlignment="center"
                    android:layout_marginRight="30dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_change_password"
                android:textAllCaps="false"
                android:elevation="10dp"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Change password"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_horizontal"
                android:textSize="14dp"
                android:background="@drawable/btn_round"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/btn_delete_account"
                android:textAllCaps="false"
                android:elevation="10dp"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Delete account"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_horizontal"
                android:textSize="14dp"
                android:background="@drawable/btn_round"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>